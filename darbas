void Question::setValues(string q, string ca)
{
    Question_Text = std::move(q);
    Correct_Answer = std::move(ca);
}

void Spejimas::setValues1(string kl, string ta) {
    Text = std::move(kl);
    Teisingas = std::move(ta);
}

void Question::askQuestion()
{
    cout << endl;

    cout << Question_Text << endl;

    cout << endl;

    cout << "taip/ne?"
         << endl;
    cin >> Guess;

    if (Guess == Correct_Answer) {
        cout << ":) Kitas klausimas" << endl;

    }
    else {
        cout << ":( Kitas klausimas" << endl;
        cout << endl;
    }
}
void Spejimas::askQuestion1() {
    cout << endl;
    cout << Text << endl;
    cout << endl;
    cout << "taip/ne" << endl;
    cin >> Guess;
    if (Guess == Teisingas) {
        cout << "Valio!" << endl;
    } else {
        cout << "Irasykite nauja gyvuna" << endl;
        cin >> New;
    }
}
