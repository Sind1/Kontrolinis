// C++ program for the above approach
#include <iostream>
#include <string>
#include <utility>
using namespace std;

basic_string<char, char_traits<char>, allocator<char>> Guess;

class Question {
private:
    string Question_Text;
    string Correct_Answer;

public:
    void setValues(string, string);

    void askQuestion();

};

class Spejimas {
private:
    string Text;
    string Teisingas;
    string New;

public:
    void setValues1(string, string);

    void askQuestion1();
};

int main() {
    string Text;
